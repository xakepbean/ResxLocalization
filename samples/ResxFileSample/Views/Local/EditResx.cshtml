@model List<ResxFileSample.Models.ResouresEditModel>
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "国际语言编辑";
    Layout = "_EditResxLayout";
}
<style>
    body{
        padding:0px;
    }
    .ResxTable input[type=text]{
        width:90%;
    }
</style>
<form asp-action="EditResx" asp-route-ReName="@ViewData["ReName"]">
    <table style="width:100%;" class="ResxTable">
        <thead>
            <tr>
                <td>
                    @Localizer["DefaultValue"]
                </td>
                <td>
                    @Localizer["LocalizedValue"]
                </td>
            </tr>
        </thead>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td colspan="2">
                    @Localizer["ResourceName"]@Html.DisplayFor(modelItem => Model[i].ResourceName)
                    @Html.HiddenFor(modelItem => Model[i].ResourceName)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBoxFor(modelItem => Model[i].DefaultValue, new { @readonly = "readonly" })
                </td>
                <td>
                    @Html.TextBoxFor(modelItem => Model[i].LocalizedValue)
                </td>
            </tr>
        }
    </table>
    <input type="submit" id="btnSubmit" value="保存" />
</form>
